<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blood Bank Dashboard - Edit Centre</title>
    <style>
        :root {
            --primary-color: #ff4b2b;
            --secondary-color: #ff416c;
            --accent-color: #232526;
            --text-color: #f8f9fa;
            --border-color: #393e46;
            --success-color: #27ae60;
            --warning-color: #f39c12;
            --danger-color: #e74c3c;
            --shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.45);
            --border-radius: 18px;
            --glass-bg: rgba(40, 40, 50, 0.55);
            --glass-blur: blur(10px);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: var(--text-color);
            background: linear-gradient(135deg, #232526 0%, #414345 100%);
            min-height: 100vh;
        }

        /* Navigation */
        .navbar {
            background: rgba(30, 30, 40, 0.92);
            color: var(--text-color);
            padding: 1rem 0;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: var(--shadow);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--border-color);
        }

        .nav-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .nav-brand {
            font-size: 1.7rem;
            font-weight: bold;
            color: var(--primary-color);
            letter-spacing: 1.5px;
            text-shadow: 0 2px 8px rgba(0, 0, 0, 0.18);
        }

        .nav-links {
            display: flex;
            list-style: none;
            gap: 2rem;
        }

        .nav-links a {
            color: var(--text-color);
            text-decoration: none;
            padding: 0.5rem 1.2rem;
            border-radius: var(--border-radius);
            transition: background 0.3s, transform 0.2s, color 0.2s;
            font-weight: 500;
            font-size: 1.1rem;
        }

        .nav-links a:hover,
        .nav-links a.active {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: #fff;
            transform: scale(1.08);
            box-shadow: 0 2px 8px rgba(255, 65, 108, 0.15);
        }

        .nav-toggle {
            display: none;
        }

        /* Main Content */
        .main-content {
            margin-top: 100px;
            padding: 2rem 0;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        .page-header {
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid var(--border-color);
        }

        .page-title {
            font-size: 2rem;
            color: var(--primary-color);
            letter-spacing: 1px;
            font-weight: 600;
            text-shadow: 0 2px 8px rgba(255, 65, 108, 0.08);
        }

        /* Form Styles */
        .form-container {
            background: var(--glass-bg);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            padding: 2.5rem 2rem;
            backdrop-filter: var(--glass-blur);
            border: 1px solid var(--border-color);
            margin-bottom: 2rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: var(--text-color);
        }

        .form-control {
            width: 100%;
            padding: 0.85rem;
            border: 2px solid var(--border-color);
            border-radius: var(--border-radius);
            font-size: 1rem;
            background: rgba(35, 37, 38, 0.85);
            color: var(--text-color);
            transition: border-color 0.3s, background 0.3s;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            background: rgba(35, 37, 38, 1);
        }

        .form-control:invalid {
            border-color: var(--danger-color);
        }

        .form-control:valid {
            border-color: var(--success-color);
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        .btn {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: #fff;
            text-decoration: none;
            border-radius: var(--border-radius);
            transition: background 0.3s, transform 0.2s;
            border: none;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 500;
            box-shadow: 0 2px 8px rgba(255, 65, 108, 0.12);
        }

        .btn:hover {
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
            transform: scale(1.07);
            box-shadow: 0 6px 24px rgba(255, 65, 108, 0.18);
        }

        .btn-secondary {
            background: #393e46;
            color: #fff;
            transition: background 0.3s;
        }

        .btn-secondary:hover {
            background: #232526;
        }

        /* Alerts */
        .alert {
            padding: 20px;
            color: white;
            border-radius: 5px;
            margin-bottom: 1rem;
            font-size: 1rem;
            box-shadow: 0 2px 8px rgba(255, 65, 108, 0.10);
        }

        .closebtn {
            margin-left: 15px;
            color: white;
            font-weight: bold;
            float: right;
            font-size: 22px;
            line-height: 20px;
            cursor: pointer;
            transition: 0.3s;
        }

        .closebtn:hover {
            color: #ff416c;
        }

        .alert-danger {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
        }

        .alert-success {
            background: linear-gradient(135deg, #27ae60, #219a52);
        }
    </style>
</head>

<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">Blood Bank Dashboard</div>

            <ul class="nav-links" id="navLinks">
                <li><a href="../Home">Home</a></li>
                <li><a href="../Center/">üè•Center</a></li>
                <li><a href="../Donor/">üë•Donors</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <!-- Page Header -->
            <div class="page-header">
                <h1 class="page-title">Edit Centre</h1>
            </div>

            <div id="messageBox"></div>

            <div class="form-container">
                <form id="editCentreForm" onsubmit="handleUpdate(event)">
                    <div class="form-group">
                        <label for="centreName" class="form-label">Centre Name *</label>
                        <input type="text" id="centreName" class="form-control" required
                            placeholder="Enter centre name">
                    </div>

                    <div class="form-group">
                        <label for="centreLocation" class="form-label">Location *</label>
                        <input type="text" id="centreLocation" class="form-control" required
                            placeholder="Enter location">
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn">Update Centre</button>
                        <a href="/Center" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
        </div>
    </main>

    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const centerId = urlParams.get("id");

        async function loadCenter() {
            const res = await fetch(`/api/CenterApi/${centerId}`);
            const data = await res.json();
            document.getElementById("centreName").value = data.name;
            document.getElementById("centreLocation").value = data.location;
        }

        async function handleUpdate(event) {
            event.preventDefault();

            const updatedData = {
                name: document.getElementById("centreName").value,
                location: document.getElementById("centreLocation").value
            };

            const res = await fetch(`/api/CenterApi/${centerId}`, {
                method: "PUT",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(updatedData)
            });

            const result = await res.json();

            if (res.ok) {
                document.getElementById("messageBox").innerHTML =
                    `<div class="alert alert-success"><span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>${result.message}</div>`;
            } else {
                const errorText = Object.values(result).flat().join("<br>");
                document.getElementById("messageBox").innerHTML =
                    `<div class="alert alert-danger"><span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>${errorText}</div>`;
            }
        }

        window.onload = loadCenter;
    </script>
</body>

</html>
